<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="style.css">
  <title>CellNext | Signup</title>
  <link rel="stylesheet" href="css/user-signup-styles.css" type="text/css">
  <link rel="shortcut icon" href="https://cdn-icons-png.flaticon.com/512/295/295128.png" type="image/x-icon">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>

<body>
  <div class="container">
    <div class="container-wrapper">
      <h3 class="login-text"><i class="bi bi-person-circle ac-logo"></i>Signup</h3>

      <form method="post" id="signupForm" action="/signup">
        <% if (locals.message && message.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
          <strong>Error:</strong> <%= message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>

        <div id="nameError" class="error-message"></div>
        <div class="item">
          <label for="fullName">Full Name</label>
          <input class="input" type="text" id="name" placeholder="Enter your full name" name="name">
        </div>

        <div id="emailError" class="error-message"></div>
        <div class="item">
          <label for="email">Email</label>
          <input class="input" type="email" id="email" placeholder="Enter your email address" name="email">
        </div>

        <div id="phoneError" class="error-message"></div>
        <div class="item">
          <label for="phone">Phone</label>
          <input class="input" type="tel" id="phone" placeholder="Enter your phone number" name="phone">
        </div>

        <div id="passwordError" class="error-message"></div>
        <div class="item">
          <label for="password">Password</label>
          <input class="input" type="password" id="password" placeholder="Enter your password" name="password">
        </div>

        <div id="confirmPasswordError" class="error-message"></div>
        <div class="item">
          <label for="confirmPassword">Confirm Password</label>
          <input class="input" type="password" id="confirmPassword" placeholder="Re-enter your password" name="confirmPassword">
        </div>


        <div class="item submit">
          <button type="submit" id="sendOtp">Send OTP</button>
        </div>

      </form>

      <h2><span>OR</span></h2>

      <!-- Google Signup -->
      <div class="item submit google-btn">
        <a href="/auth/google" class="button-like-anchor">
          <div class="icons8-google social-mediaImg"></div>
          Signup with Google
        </a>
      </div>

      <!-- Link to Login Page -->
      <div class="item submit">
        <span class="ac">Already have an Account? <a href="/login">Login</a></span>
      </div>
    </div>
  </div>
  <script src="js/signup.js"></script>
  <script>
    window.onload = function() {
      if (window.performance && window.performance.navigation.type == window.performance.navigation.TYPE_BACK_FORWARD) {
        document.getElementById('signupForm').reset();
        window.location.reload();
      }
    }
  </script>
</body>

</html>
