<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="style.css">
  <title>CellNext | Login</title>
  <link rel="stylesheet" href="css/user-signup-styles.css" type="text/css">
  <link rel="shortcut icon" href="https://cdn-icons-png.flaticon.com/512/295/295128.png" type="image/x-icon">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <div class="container">
    <div class="container-wrapper" id="login-page">
      <h3 class="login-text"><img src="/img/CellNext.png" alt="CN Logo" class="ac-logo">Login</h3>
      <h6 class="my-4"><span>Login with CellNext account</span></h6>
      <form method="post" action="/login" id="loginForm">
        <% if (locals.message && message.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
          <strong><%= message %></strong>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>
        <div class="item">
          <label for="email">Email</label>
          <input class="input" type="email" id="email" placeholder="Enter your email" name="email" required>
        </div>
        <div class="item">
          <label for="password">Password</label>
          <div class="position-relative">
            <input class="input" type="password" id="password" placeholder="Enter your password" name="password" required />
            <button type="button" class="btn position-absolute top-50 end-0 translate-middle-y mx-2 toggle-visibility" id="togglePassword" style="opacity: 0; pointer-events: none;">
              <i class="bi bi-eye"></i>
            </button>
          </div>
        </div>

        <div class="item submit"><button type="submit">Login</button></div>
      </form>
      <h6><span>OR</span></h6>
      <div class="item submit google-btn">
        <a href="/auth/google" class="button-like-anchor">
          <div class="icons8-google social-mediaImg"></div>
          Login with Google
        </a>
      </div>
      <span class="ac text-muted">Don't have an Account? <a href="/signup" class="text-body">Sign up</a></span>
      <div>
        <span class="ac text-muted ">Forgot Password? <a href="/forgot-password" class="text-body">Reset Password</a></span>
      </div>

    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    window.onload = function() {
      if (window.performance && window.performance.navigation.type == window.performance.navigation.TYPE_BACK_FORWARD) {
        document.getElementById('loginForm').reset();
        window.location.reload();
      }
    }
    const passwordInput = document.getElementById("password");
    const toggleButton = document.getElementById("togglePassword");

    passwordInput.addEventListener("input", () => {
      if (passwordInput.value.trim()) {
        toggleButton.style.opacity = "1";
        toggleButton.style.pointerEvents = "auto";
      } else {
        toggleButton.style.opacity = "0";
        toggleButton.style.pointerEvents = "none";
      }
    });

    toggleButton.addEventListener("click", () => {
      const type = passwordInput.type === "password" ? "text" : "password";
      passwordInput.type = type;

      const icon = toggleButton.querySelector("i");
      icon.classList.toggle("bi-eye");
      icon.classList.toggle("bi-eye-slash");
    });
  </script>
</body>



</html>