<!-- Initialize ElevateZoom with lens effect -->
<script>
  $(document).ready(function () {
    function applyZoom() {
      var lensSize = 300;  

      if ($(window).width() < 768) {
        lensSize = 200;  
      }

      $('.zoom-image').elevateZoom({
        zoomType: 'lens',       
        lensShape: 'round',     
        lensSize: lensSize,     
        borderSize: 3,          
        borderColor: '#ccc',    
        zoomWindowWidth: 400,   
        zoomWindowHeight: 400,  
        zoomWindowPosition: 1,  
        scrollZoom: true,       
        zoomWindowFadeIn: 500,  
        zoomWindowFadeOut: 500, 
      });
    }

    applyZoom();

    $(window).resize(function () {
      applyZoom();
    });
  });
</script>

