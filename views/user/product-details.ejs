<script>
  console.log('add to cart button clicked');
  document.getElementById('add-to-cart-btn').addEventListener('click', function() {
   console.log('add to cart button clicked');
 
   // Get product details
   const productId = '<%= product._id %>';  // Inject product ID from server
   const variantId = getSelectedVariantId(); // Get selected variant ID
   const quantity = parseInt(document.getElementById('cart-quantity').value, 10); // Correct quantity input field ID
 
   if (variantId == null || isNaN(quantity) || quantity <= 0) {
     alert('Please select a valid variant and quantity.');
     return;
   }
 
   // Prepare the data to send to the server
   const cartData = {
     productId: productId,
     variantId: variantId,
     quantity: quantity
   };
 
   // Make an API request to add to cart
   fetch('/cart/add', {
     method: 'POST',
     headers: {
       'Content-Type': 'application/json',
       'Authorization': 'Bearer ' + localStorage.getItem('authToken')  // Optional for user authentication
     },
     body: JSON.stringify(cartData),
   })
   .then(response => response.json())
   .then(data => {
     if (data.success) {
       alert('Item added to cart!');
       updateCartDisplay(data.cart); // Update the cart display
     } else {
       alert('Failed to add item to cart. Please try again.');
     }
   })
   .catch(error => {
     console.error('Error adding to cart:', error);
     alert('There was an error processing your request.');
   });
 });
 
 // Function to get selected variantId based on size and color
 function getSelectedVariantId() {
   const selectedSize = document.querySelector('input[name="size"]:checked');
   const selectedColor = document.querySelector('input[name="color"]:checked');
 
   if (selectedSize && selectedColor) {
     const size = selectedSize.value;
     const color = selectedColor.value;
 
     // Find the variant index that matches the selected size and color
     const variantIndex = findVariantIndex(size, color); // This function should match the size/color with variants
     return variantIndex;
   }
   return null;  // Return null if no selection is made
 }
 
 // Function to find the variant index based on size and color
 function findVariantIndex(size, color) {
  const variants = <%- JSON.stringify(product.variants) %>;  // Inject product variants into JS
   for (let i = 0; i < variants.length; i++) {
     if (variants[i].size === size && variants[i].color === color) {
       return i; // Return the variant index
     }
   }
   return null;  // If no match found
 }
 
 // Implement your cart display update function (for example)
 function updateCartDisplay(cart) {
   // Update the cart UI with the latest data (you can render it dynamically or update a cart counter)
   console.log('Updated cart:', cart);
 }
 
 </script>


