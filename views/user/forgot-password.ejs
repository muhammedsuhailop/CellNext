<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="style.css">
  <title>CellNext | Login</title>
  <link rel="stylesheet" href="css/user-signup-styles.css" type="text/css">
  <link rel="shortcut icon" href="https://cdn-icons-png.flaticon.com/512/295/295128.png" type="image/x-icon">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <div class="container">
    <div class="container-wrapper">
      <h3 class="login-text"><img src="/img/CellNext.png" alt="CN Logo" class="ac-logo"></i>Reset Password</h3>
      <form action="/forgot-email-valid" method="post" id="forgotPasswordForm">
        <% if (locals.message && message.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
          <strong>Error:</strong> <%= message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>
        <h6><span class="text-muted">You will receive an OTP in your email</span></h6>
        <div class="item">
          <label for="email">Email</label>
          <input class="input" type="email" id="email" placeholder="Enter your email" name="email" required>
        </div>
        <div class="item submit"><button id="sendOtp" type="submit">Verify</button></div>
      </form>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    window.onload = function() {
      if (window.performance && window.performance.navigation.type == window.performance.navigation.TYPE_BACK_FORWARD) {
        document.getElementById('forgotPasswordForm').reset();
        window.location.reload();
      }
    }
  </script>
  <script>
    const forgotPasswordForm = document.getElementById('forgotPasswordForm');
    const sendOtpButton = document.getElementById('sendOtp');

    forgotPasswordForm.addEventListener('submit', function(event) {
      sendOtpButton.innerHTML = `
        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
      <span class="ms-2">Sending OTP...</span>
      `;
      sendOtpButton.disabled = true;
    });
  </script>
</body>

</html>